<div class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-form' }) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal"><%= t('.sign_in') %></h1>

    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control first-field', placeholder: true %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control last-field', placeholder: true %>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' do %>
          <%= resource.class.human_attribute_name('remember_me') %>
        <% end %>
      </div>
    <% end %>

    <%= f.submit  t('.sign_in'), class: 'btn btn-primary btn-block' %>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>